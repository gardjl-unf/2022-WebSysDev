@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Cascading Menus</title>
    <meta charset="utf-8">

    <style>


        * {
            margin: 0px;
            padding: 0px;
        }

        body {
            background-image: url(@ViewBag.Logo);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            text-decoration: none;
        }

        h1 {
            text-align: center;
            border-bottom: 2px solid #009;
            margin-bottom: 50px;
        }

        ul#navmenu a {
            text-decoration: none;
            display: inline;
            width: 125px;
            height: 5px;
            line-height: 30px;
            background-color: none;
            border: none;
            color: black;
            font-size: 20px;
            padding-right: .15rem;
            padding-left: .15rem;


        }

        ul#navmenu, ul.sub1, ul.sub2 {
            list-style-type: none;
        }

            ul#navmenu li {
                width: 125px;
                text-align: Left;
                posiion: relative;
                float: right;
                /*  margin-right: 10px; */
            }

            ul#navmenu .sub1 a {
                margin-top: 15px;
            }


            ul#navmenu .sub2 a {
                margin-left: 15px;
            }

            ul#navmenu li:hover > a {
                background-color: red;
            }

            ul#navmenu li:hover a:hover {
                background-color: grey;
            }

            /* below uses recomended relative spacing */

            ul#navmenu ul.sub1 {
                display: none;
                position: relative;
                top: .1px;
                left: 0px;
            }

            ul#navmenu ul.sub2 {
                display: none;
                position: relative;
                top: .1px;
                left: 10px;
            }

            ul#navmenu li:hover .sub1 {
                display: block;
            }

            ul#navmenu .sub1 li:hover .sub2 {
                display: block;
            }

        .darrow {
            font-size: 10pt;
            position: relative;
            top: 1px;
            right: 4px;
        }

        .darrow {
            font-size: 10pt;
            position: relative;
            top: 1px;
            right: 4px;
        }

        .parent-style-one {
            background-color: white;
            border-color: Yellow;
            color: yellow;
            position: absolute;
            bottom: 10%;
            left: 40%;
            border-radius: 14px 14px 14px 14px; 
            /* margin-left: -10.5px; /*104.5px is half of the button's width*/
            font-size: 20px;
            text-decoration: none;
            width: 50px;
        }

        .button1 {
            background-color: white;
            border-color: black;
            color: black;
            position: absolute;
            bottom: 10px;
            left: 40%;
                      border-radius: 14px 14px 14px 14px; 
            margin-left: -10.5px; /*104.5px is half of the button's width*/ 
            font-size: 25px;
            text-decoration: none;
            width: 155px;
            padding-left: 10px;
        }


    </style>

</head>
<body>

    <ul id="navmenu">
        <a> @Html.ActionLink("Model 3", "IndexModel", "Product", new { Model = "3"}, null) </a>
        <a> @Html.ActionLink("Model Y", "IndexModel", "Product", new { Model = "Y"}, null) </a>
        <a> @Html.ActionLink("Model X", "IndexModel", "Product", new { Model = "X"}, null) </a>
        <a> @Html.ActionLink("Model S", "IndexModel", "Product", new { Model = "S"}, null) </a>
        <a @Html.ActionLink("Merchandise", "List", "Product", new { category = "Exterior"}, null) </a>


        <li>
            <a href="#"> Menu </a>
            <ul class="sub1">
                <li> <a> @Html.ActionLink("Check Orders", "List2", "Order") </a> </li>
                <li> <a href="#"> Contact Us </a> </li>
                <li> <a id="GFG3" href="@Url.Content("../Docs/FAQs.html")">Customer FAQs</a> </li>
                <li> <a id="GFG3" href="@Url.Content("../Docs/Ordering.html")">Ordering</a> </li>
                <li> <a id="GFG3" href="@Url.Content("../Docs/Warranty.html")">Warranty</a> </li>
                <li> <a id="GFG3" href="@Url.Content("../Docs/Charging.html")">Charging</a> </li>
                <li> <a id="GFG3" href="@Url.Content("../Docs/AutoPilot.html")">AutoPilot</a> </li>
                <li>
                    <a href="#"> Corprate Info </a>
                    <ul class="sub2">
                        <li> <a id="GFG3" href="@Url.Content("../Docs/CorporateInfo.html")">Company </a> </li>
                        <li> <a id="GFG3" href="@Url.Content("../Docs/MasterPlan.html")">Master Plan </a> </li>
                    </ul>
                </li>
                <li>
                    <a href="#"> Admin </a>
                    <ul class="sub2">
                        <li> <a href="#">Ship Orders </a> </li>
