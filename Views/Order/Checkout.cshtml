@model Order

@{
    ViewBag.Title = "Checkout | Tuskla - Electric Cars";
    Layout = "_Layout";
}
<script type="text/javascript" src="~/lib/country-region-selector/crs.min.js"></script>


<div class="row">
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Billing address</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Checkout" method="post">
            <div class="row">
                <div class="col-md-4 mb-3">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Full Name" value="">
        </div>

                <div class="col-md-4 mb-3">
          <label for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="you@example.com">
        </div>
            </div>
        <div class="mb-3">
          <label for="address">Address</label>
          <input type="text" class="form-control" asp-for="Line1" placeholder="1234 Main St">
        </div>

        <div class="mb-3">
          <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
          <input type="text" class="form-control" id="Line2" placeholder="Apartment or Suite">
        </div>
        <div class="mb-3">
            <label for="address2">Address 3 <span class="text-muted">(Optional)</span></label>
            <input type="text" class="form-control" id="Line3">
        </div>

        <div class="row">
                <div class="col-md-3 mb-3">
                    <label for="Country">Country</label>
            <select class="crs-country custom-select d-block w-100" id="country" asp-for="Country" data-region-id="crs-region" data-preferred="US,CA,MX" data-default-value="US" data-value="shortcode"></select>

          </div>
                <div class="col-md-3 mb-3">
            <label for="State">State</label>
                    <select class="custom-select d-block w-100" asp-for="State" id="crs-region" data-default-value="AL" data-value="shortcode"></select>

          </div>
                <div class="col-md-4 mb-3">
                    <label for="City">City</label>
                    <input type="text" class="form-control" asp-for="City" placeholder="Your City">
                </div>
          <div class="mb-2">
            <label for="Zip">Zip</label>
                    <input type="text" class="form-control" asp-for="Zip" placeholder="00000">
          </div>
        </div>
        <hr class="mb-4">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="GiftWrap">
          <label class="custom-control-label" for="GiftWrap">Giftwrap Items</label>
        </div>
        <hr class="mb-4">

        
        

            @await Component.InvokeAsync("Checkout")

      </form>
    </div>
  </div>

