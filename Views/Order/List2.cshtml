@model IEnumerable<Order>

@{
 ViewBag.Title = "Orders";
    Layout = "_AdminLayout3";
}

<form asp-controller="Order" asp-action="List2" method="get">
    <p>
        Order Number: <input type="text" name="OrderIdString" />
        <input type="submit" value="Filter" />
    </p>
</form>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>OrderID</th>
            <th>Name</th>
            <th>Zip</th>
            <th colspan="2">Details</th>
            <th></th>
        </tr>
        @foreach (Order o in Model)
        {
            <tr>
                <td>@o.OrderID</td>
                <td>@o.Name</td>
                <td>@o.Zip</td>
                <th>Product</th>
                <th>Quantity</th>
                <td></td>
            </tr>
            @foreach (CartLine line in o.Lines)
            {
            <tr>
                <td colspan="2"></td>
                <td>@line.Product.Name</td>
                <td>@line.Quantity</td>
                <td></td>
            </tr>
            }
        }
    </table>
}
