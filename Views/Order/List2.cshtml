@model IEnumerable<Order>

@{
 ViewBag.Title = "Orders";
    Layout = "_AdminLayout2";
}

<form asp-controller="Order" asp-action="List2" method="get">
    <p>
        Order Number: <input type="text" name="OrderIdString" />
        <input type="submit" value="Filter" />
    </p>
</form>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>OrderID</th>
            <th>E-Mail</th>
            <th>Zip</th>

            <th></th>
        </tr>
        @foreach (Order o in Model)
        {
            <tr> 
                <td>@o.OrderID</td>
                <td>@o.Email</td>
                <td>@o.Zip</td>

            </tr>

            <tr> 
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
            </tr>

            @foreach (CartLine line in o.Lines)
            {
                <tr>
                <td>@line.Product.Name</td>
                <td>@line.Product.Description</td>
                 <td>@line.Quantity</td>
                </tr> 
            }
        }
    </table>


}
