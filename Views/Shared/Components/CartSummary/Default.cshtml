@model Cart

<a asp-controller="Cart" asp-action="Index">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s)
        @Model.ComputeSubtotalValue().ToString("c")
        </small>
    }
    <a class="float-left" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart fa-xs"></i>
    </a>
</a>
